{
  "if": {
     "anyOf": [
    {
     "not": {
       "anyOf": [
         {
           "field": "type",
           "like": "Microsoft.Databricks/workspaces/*"
           },
           {
            "value": "[parameters('allowedVmSizes')]",
            "contains": "[field('Microsoft.Compute/virtualMachines/sku.name')]"
          },
            {
           "field": "type",
           "in": ["Microsoft.Databricks/workspaces"]
           }
            ]
     }
    },
           {
     "allOf": [
       {
       "source": "action",
       "equals": "Microsoft.Synapse/workspaces/write"
       },
       {
       "field": "type",
       "equals": "Microsoft.Synapse/workspaces"
       },
       {
       "source": "action",
       "equals": "Microsoft.Purview/accounts/write"
       },
       {
       "field": "type",
       "equals": "Microsoft.Purview/accounts"
       }
     ]
     },
     {
		  "allOf": [
			{
			  "field": "type",
			  "equals": "Microsoft.Compute/virtualMachines"
			},
			{
			  "not": {
				"allOf": [
				  {
					"field": "Microsoft.Compute/virtualMachines/sku.name",
					"in": ["Standard_DS1_v2","Standard_D2s_v3", "Standard_D2as_v4","Standard_B2s", "Standard_B1s", "Standard_B2ms", "Standard_B1ls"]
				  }
				]
			  }
			}
		   ]
		}
   ]
 },
 "then": {
   "effect": "deny"
 },
 "parameters": {
  "allowedVmSizes": {
    "type": "Array",
    "metadata": {
      "description": "The list of allowed VM sizes"
    },
    "defaultValue": [
      "Standard_DS1_v2",
      "Standard_D2s_v3", 
      "Standard_D2as_v4",
      "Standard_B2s", 
      "Standard_B1s", 
      "Standard_B2ms", 
      "Standard_B1ls"
    ]
  }
}
}
