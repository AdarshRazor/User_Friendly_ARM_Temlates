{
  "if": {
    "anyOf": [
      {
        "not": {
          "anyOf": [
            {
              "field": "type",
              "like": "Microsoft.Synapse/workspaces/*"
            },
            {
              "field": "type",
              "like": "Microsoft.Purview/accounts/*"
            },
            {
              "field": "type",
              "in": [
                "Microsoft.Synapse/workspaces",
                "Microsoft.Purview/accounts"
              ]
            }
          ]
        }
      },
      {
        "allof": [
          {
            "source": "action",
            "equals": "Microsoft.Databricks/workspaces/write"
          },
          {
            "field": "type",
            "equals": "Microsoft.Databricks/workspaces"
          },
          {
            "not": {
              "field": "Microsoft.Databricks/workspaces/sku.name",
              "in": [ "Standard", "Premium" ]
            }
          }
        ]
      }
    ]
  },
  "then": {
    "effect": "deny"
  }
}
